# Automated Agent System Configuration
# Copy this file to .env.agents and fill in your actual values

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# CLAUDE API CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Claude API Key - Required for agent invocation
CLAUDE_API_KEY=your-claude-api-key-here

# Webhook URL for agent invocation
# This is the endpoint where agents listen for work requests
CLAUDE_WEBHOOK_URL=http://localhost:3000/webhook

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# GITHUB CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# GitHub Personal Access Token - Required for PR comments and API access
GITHUB_TOKEN=ghp_your-github-token-here

# GitHub Webhook Secret - Used to verify webhook signature authenticity
# Generate this as a random string and configure in GitHub settings
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# SLACK CONFIGURATION (Optional)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Slack Webhook URL - For sending agent notifications to Slack
# Get this from your Slack workspace settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack Channel - Where to post agent notifications (optional)
SLACK_CHANNEL=#engineering-automation

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# MCP TOOLS CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Exa API Key - For web search and research
EXA_API_KEY=your-exa-api-key-here

# Context7 API Key - For knowledge base access
CONTEXT7_API_KEY=your-context7-api-key-here

# Ref API Key - For tools API integration
REF_API_KEY=your-ref-api-key-here

# Semgrep API Key (optional, Semgrep runs locally)
SEMGREP_APP_TOKEN=your-semgrep-token-here

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# WEBHOOK SERVER CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Port for webhook server
PORT=3000

# Node environment
NODE_ENV=production

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# LOGGING & AUDIT CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log directory for audit trails
LOG_DIR=./logs

# Enable audit trail logging
AUDIT_ENABLED=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# DEPLOYMENT CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Render deployment service ID
RENDER_SERVICE_ID=your-render-service-id

# Render deploy key
RENDER_DEPLOY_KEY=your-render-deploy-key

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# AGENT BEHAVIOR CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Run agents in parallel (true) or sequential (false)
AGENTS_PARALLEL=true

# Timeout for agent execution (in seconds)
AGENT_TIMEOUT=300

# Retry failed agent invocations
AGENT_RETRY_ENABLED=true
AGENT_RETRY_COUNT=3
AGENT_RETRY_DELAY=5000

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# PR COMMENT CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Post detailed results as PR comments
POST_PR_COMMENTS=true

# Include code snippets in PR comments
INCLUDE_CODE_SNIPPETS=true

# Max comment length (in characters)
MAX_COMMENT_LENGTH=65536
