{
  "name": "koinonia-sms-backend",
  "version": "0.1.0",
  "description": "Backend API for Koinonia SMS",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run prisma:generate:all && tsc",
    "start": "node dist/index.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "start:pm2:prod": "pm2 start ecosystem.config.js --env production",
    "reload:pm2": "pm2 reload koinonia-api",
    "monit:pm2": "pm2 monit",
    "logs:pm2": "pm2 logs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "prisma:generate": "prisma generate",
    "prisma:generate:tenant": "prisma generate --schema prisma/tenant-schema.prisma",
    "prisma:generate:all": "npm run prisma:generate && npm run prisma:generate:tenant",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "loadtest:smoke": "k6 run --vus 1 --iterations 5 --duration 2m scripts/loadtest.k6.js",
    "loadtest:load": "k6 run --scenario load scripts/loadtest.k6.js",
    "loadtest:spike": "k6 run --scenario spike scripts/loadtest.k6.js",
    "loadtest:soak": "k6 run --scenario soak scripts/loadtest.k6.js",
    "loadtest:conversation": "k6 run --scenario conversation scripts/loadtest.k6.js",
    "loadtest:all": "npm run loadtest:smoke && npm run loadtest:load && npm run loadtest:spike && npm run loadtest:conversation"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.480.0",
    "@aws-sdk/s3-request-presigner": "^3.480.0",
    "@paralleldrive/cuid2": "^3.0.6",
    "@prisma/client": "^7.2.0",
    "@sendgrid/mail": "^8.1.6",
    "@sentry/node": "^10.27.0",
    "@sentry/tracing": "^7.120.4",
    "@types/multer": "^2.0.0",
    "axios": "^1.13.1",
    "bcrypt": "6.0.0",
    "bull": "4.16.5",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "csurf": "^1.2.2",
    "dd-trace": "^5.80.0",
    "dotenv": "17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "8.2.1",
    "express-session": "^1.17.3",
    "ffprobe-static": "^3.1.0",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.3",
    "libphonenumber-js": "1.12.33",
    "multer": "^2.0.2",
    "newrelic": "^13.6.6",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "openai": "^6.8.0",
    "papaparse": "5.5.3",
    "pg": "^8.16.3",
    "pm2": "^6.0.14",
    "qrcode": "^1.5.4",
    "redis": "5.10.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "stripe": "20.1.2",
    "uuid": "^13.0.0",
    "vite": "7.3.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/papaparse": "^5.3.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "k6": "^0.0.0",
    "prettier": "^3.1.0",
    "prisma": "^7.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
