{
  "name": "connect-yw-backend",
  "version": "0.1.0",
  "description": "Backend API for Koinonia YW Platform",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "loadtest:smoke": "k6 run --vus 1 --iterations 5 --duration 2m scripts/loadtest.k6.js",
    "loadtest:load": "k6 run --scenario load scripts/loadtest.k6.js",
    "loadtest:spike": "k6 run --scenario spike scripts/loadtest.k6.js",
    "loadtest:soak": "k6 run --scenario soak scripts/loadtest.k6.js",
    "loadtest:conversation": "k6 run --scenario conversation scripts/loadtest.k6.js",
    "loadtest:all": "npm run loadtest:smoke && npm run loadtest:load && npm run loadtest:spike && npm run loadtest:conversation"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.480.0",
    "@aws-sdk/s3-request-presigner": "^3.480.0",
    "@prisma/client": "^5.13.0",
    "@sendgrid/mail": "^8.1.6",
    "@sentry/node": "^10.27.0",
    "@sentry/tracing": "^7.120.4",
    "@types/multer": "^2.0.0",
    "axios": "^1.13.1",
    "bcrypt": "5.1.0",
    "bull": "4.10.0",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "csurf": "^1.2.2",
    "dd-trace": "^5.80.0",
    "dotenv": "16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "6.10.0",
    "ffprobe-static": "^3.1.0",
    "helmet": "7.0.0",
    "jsonwebtoken": "9.0.0",
    "libphonenumber-js": "1.10.38",
    "multer": "^2.0.2",
    "node-cron": "^3.0.2",
    "node-fetch": "^2.7.0",
    "openai": "^6.8.0",
    "papaparse": "5.4.1",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "redis": "4.6.7",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "stripe": "12.16.0",
    "uuid": "^8.3.2",
    "vite": "7.1.12",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/papaparse": "^5.3.14",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "k6": "^0.0.0",
    "prettier": "^3.1.0",
    "prisma": "^5.13.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
